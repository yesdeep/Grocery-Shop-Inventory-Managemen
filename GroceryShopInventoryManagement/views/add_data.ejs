            <div class="card" style="width: 80rem; border: 1px solid black; padding: 10px; margin-top:50px">
              <div class="card-body">
                <h2 class="card-title">Add New Products</h2>
                <br>
                <p class="card-text">
                  <form method="POST" action="/add_data">


                    <div class="form-group">
                      <label for="pid">Product ID :</label>&nbsp;
                      <input type="text" class="form-control" placeholder="Enter Product ID" name="pid" id="pid"><br>
                    </div>

                    <div class="form-group">
                      <label for="pname">Product Name :</label>&nbsp;
                      <input type="text" class="form-control" placeholder="Enter Product Name" name="pname" id="pid"><br>
                    </div>

                    <div class="form-group">
                      <label for="quantity">Product Quantity :</label>&nbsp;
                      <input type="text" class="form-control" placeholder="Enter Product Quantity" name="quantity" id="quantity"><br>
                    </div>

                    <div class="form-group">
                      <label for="stock">Stock :</label>&nbsp;
                      <input type="text" class="form-control" placeholder="Enter New stock arrived" name="stock" id="stock"><br>
                    </div>

                    <div class="form-group">
                      <label for="type">Product Type :</label>&nbsp;
                      <input type="text" class="form-control" placeholder="Enter Product Type" name="type" id="type"><br>
                    </div>

                    <div class="form-group">
                      <label for="cp">Cost Price :</label>&nbsp;
                      <input type="text" class="form-control" placeholder="Enter Product CostPrice" name="cp" id="cp"><br>
                    </div>

                    <div class="form-group">
                      <label for="sp">Selling Price :</label>&nbsp;
                      <input type="text" class="form-control" placeholder="Enter Product SellingPrice" name="sp" id="sp"><br>
                    </div>

                    <div class="card-footer">
                      <button type="submit" class="btn btn-info btn-primary">Submit</button>
                      <a href="/" class="btn btn-default float-right">Cancel</a>
                    </div>
                  </form>
        
                </p>
              </div>
