<!DOCTYPE html>
<html>
<head>
    <title>
        Home Page
    </title>

  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- <link rel="stylesheet" href="dist/css/adminlte.min.css">  -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet"> 

    <!--
        bootstrap links
    -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/"><img style=" width:70px; height: 36px;"src="logo.png"></a>

          </div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">View All Products</a></li>
            <li><a href="/add_data">Add Product</a></li>
            <li><a href="/stock_update"> Update Product</a></li>
            <li><a href="/delete_stock">Delete Product</a></li>
            <li><a href="/sales">Sales Details</a></li>
          </ul>
        </div>
      </nav>

      <div class="container" style="padding-top:50px; border:1px solid black"> 
        <div class="card">
          <div class="card-header" style="text-align: center;">
            <h2 class="card-title">Stock Details</h2>
          </div>
          
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example1" class="table table-striped table-head-fixed text-nowrap">
              <thead>
                  <tr>
                    <small>click on table header to sort based on that field</small>
                      <th style="width: 10%" >Product ID</th>
                      <th style="width: 20%" >Product Name</th>
                      <th style="width: 10%" >Quantity</th>
                      <th style="width: 20%" >Stock</th>
                      <th style="width: 10%" >Type</th>
                      <th style="width: 10%" >Cost Price</th>
                      <th style="width: 10%" >Selling Price</th>
                      <th style="width: 20%" > </th>
                  </tr>
              </thead>
              <tbody>
              </tr>
              <% for(var i=0;i<data.length;i++) { %>
                  <tr>
                      <td><%=  data[i].pid  %></td>
                      <td><%=  data[i].pname  %></td>
                      <td><%=  data[i].quantity  %></td>
                      <td>
                          <% if(data[i].stock>=90) { %>
                              <div class="progress progress-xs">
                                  <div class="progress-bar" style="width: 90%;background-color: green;"></div>
                              </div>
                              <small><%= data[i].stock %></small>
                          <% } %>
  
                          <% if(data[i].stock>=50 && data[i].stock<90) { %>
                              <div class="progress progress-xs">
                                  <div class="progress-bar " style="width: 70%; background-color: yellow;"></div>
                              </div>
                              <small><%= data[i].stock %></small>
                          <% } %>
  
                          <% if(data[i].stock<50) { %>
                              <div class="progress progress-xs">
                                  <div class="progress-bar " style="width: 25%; background-color: red;"></div>
                              </div>
                              <small><%= data[i].stock %></small>
                          <% } %>
                      </td>
                      <td><%=  data[i].type  %></td>
                      <td><%=  data[i].cp  %></td>
                      <td><%=  data[i].sp  %></td>
      
                      <td  class="project-actions text-right">
                          <a class="btn btn-info btn-sm"  href="/edit?id=<%= data[i].pid %>"><i class="fas fa-pencil-alt"></i>Edit</a>
                          <a class="btn btn-danger btn-sm" href="/delete?id=<%= data[i].pid %>" ><i class="fas fa-trash"></i>Delete</a>
                      </td>
                  </tr>
              <% } %>
                 
              </tbody>
              </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      
<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- DataTables  & Plugins -->
<script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
<script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="../../plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
