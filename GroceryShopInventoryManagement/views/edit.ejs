    <div class="container" style="margin-top:50px"> 
    <div class="card" style="width: 80rem; border: 1px solid black; padding: 10px; margin-top:50px">
      <div class="card-body">
        <h2 class="card-title">Edit Product Details</h2>
        <br>
        <p class="card-text">
          <form method="POST" action="/edit">
            <div class="form-group">
              <label for="NewStock">
                <div> Product ID: <%= data[0].pid %> </div> <br>
                <div> Product Name: <%= data[0].pname %> </div> <br>
                <div>Product Type : <%= data[0].type %> </div><br>
                <div>Product Quantity : <%= data[0].quantity %></div><br>
              </label>
              <br>
              <label for="NewStock">
                <div>Product Old Stock : <%= data[0].stock %></div>
                New Stock</label>
              <input type="text" class="form-control" placeholder="Enter New Stock" name='ns'>
            </div>
            <div class="form-group">
              <label for="NewCP">
                <div>Product Old Cost Price : <%= data[0].cp %></div>
                New cost price</label>
              <input type="text" class="form-control"  placeholder="Enter New cost price" name="cp">
            </div>
            <div class="form-group">
              <label for="NewCP">
                <div>Product Old Selling Price : <%= data[0].sp %></div>New Selling price</label>
              <input type="text" class="form-control"  placeholder="Enter New Selling price" name="sp">
            </div>
            <input type="text" value="<%= data[0].pid %>" name="pid" hidden >
            <div class="card-footer">
              <button type="submit" class="btn btn-info btn-primary">Submit</button>
              <a href="/" class="btn btn-default float-right">Cancel</a>
            </div>
          </form>

        </p>
      </div>
    </div>
    </div>
